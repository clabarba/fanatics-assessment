datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}


//DB tables
model User {
  id        Int      @id @default(autoincrement())
  userId    String?      @unique //clerk user id 
  name String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Auction {
  id                     Int       @id @default(autoincrement())
  itemDescription        String?
  startingBid            Decimal   @db.Decimal(12, 2) // Increased precision
  creatorId              Int
  currentHighestBid      Decimal?  @db.Decimal(12, 2) // Increased precision
  currentHighestBidderId Int
  lastBidTime            String? // server time
  duration               Int // in seconds
  expiresAt              String?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
}